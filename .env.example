# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ipswich_stories
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/ipswich_stories

# Application
DEBUG=true
ENVIRONMENT=development

# Weather API (OpenWeatherMap)
# Get your API key at: https://openweathermap.org/api
WEATHER_API_KEY=your_api_key_here

# LLM API (Anthropic Claude)
# Get your API key at: https://console.anthropic.com/
# Required for literary story generation in New England nature writing style
ANTHROPIC_API_KEY=your_api_key_here
LLM_MODEL=claude-sonnet-4-20250514
USE_LLM_FOR_STORIES=true

# EPA AirNow API (Air Quality - PM2.5, Ozone)
# Get your API key at: https://docs.airnowapi.org/
AIRNOW_API_KEY=your_api_key_here

# eBird API (Bird Sightings)
# Get your API key at: https://ebird.org/api/keygen
EBIRD_API_KEY=your_api_key_here

# Feature Flags
ENABLE_STORY_REGEN_ENDPOINT=true
ENABLE_MANUAL_GENERATION=true

# Admin API Key (for protected endpoints like /admin/* and /api/story/generate-today)
# If not set, admin endpoints are accessible without authentication (dev mode)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_API_KEY=

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
